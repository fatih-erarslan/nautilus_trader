# ATS-Core Production Environment Configuration Template
# 
# SECURITY WARNING: This is a template file - DO NOT commit actual secrets!
# Copy this file to .env.production and replace placeholders with actual values
#
# For production deployment, use proper secret management:
# - HashiCorp Vault
# - AWS Secrets Manager  
# - Azure Key Vault
# - Google Secret Manager
# - Kubernetes Secrets

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
ATS_ENVIRONMENT=production
ATS_LOG_LEVEL=warn

# =============================================================================
# JWT AUTHENTICATION CONFIGURATION
# =============================================================================
# Generate with: openssl rand -base64 64
# CRITICAL: Must be unique per deployment and properly secured
ATS_JWT_SECRET=REPLACE_WITH_SECURE_64_CHAR_BASE64_SECRET
ATS_JWT_EXPIRY_SECONDS=3600
ATS_JWT_ISSUER=ats-core-production
ATS_JWT_AUDIENCES=ats-core-production-api
ATS_JWT_ALGORITHM=RS256

# =============================================================================
# ENCRYPTION CONFIGURATION  
# =============================================================================
# Generate with: openssl rand -hex 32
ATS_ENCRYPTION_KEY=REPLACE_WITH_SECURE_256_BIT_HEX_KEY
ATS_ENCRYPT_AT_REST=true
ATS_ENCRYPT_IN_TRANSIT=true
ATS_ENCRYPTION_ALGORITHM=AES-256-GCM
ATS_KEY_ROTATION_SECONDS=604800

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
ATS_DB_HOST=localhost
ATS_DB_PORT=5432
ATS_DB_NAME=ats_core_production
ATS_DB_USER=ats_core_prod
ATS_DB_PASSWORD=REPLACE_WITH_SECURE_DATABASE_PASSWORD
ATS_DB_MAX_CONNECTIONS=20
ATS_DB_SSL_MODE=require

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================
ATS_RATE_LIMIT_RPM=100
ATS_RATE_LIMIT_BURST=20
ATS_RATE_LIMIT_WINDOW_SECONDS=60

# =============================================================================
# VALIDATION LIMITS
# =============================================================================
ATS_MAX_BODY_SIZE=1048576
ATS_MAX_ARRAY_LENGTH=1000
ATS_MAX_STRING_LENGTH=512
ATS_MAX_NESTING_DEPTH=5
ATS_MAX_FEATURES=1000

# =============================================================================
# API KEYS FOR EXTERNAL SERVICES
# =============================================================================
# Only include if using external services
# ATS_EXTERNAL_API_KEY=REPLACE_WITH_EXTERNAL_API_KEY
# ATS_MONITORING_API_KEY=REPLACE_WITH_MONITORING_API_KEY

# =============================================================================
# SECURITY MONITORING
# =============================================================================
ATS_SECURITY_AUDIT_ENABLED=true
ATS_FAILED_LOGIN_THRESHOLD=5
ATS_SECURITY_LOG_RETENTION_DAYS=90

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
ATS_WORKER_THREADS=4
ATS_REQUEST_TIMEOUT_SECONDS=30
ATS_CONNECTION_TIMEOUT_SECONDS=5

# =============================================================================
# SECRETS BACKEND CONFIGURATION
# =============================================================================
# Uncomment and configure based on your secrets management solution:

# HashiCorp Vault
# VAULT_ADDR=https://vault.yourdomain.com:8200
# VAULT_TOKEN_PATH=/var/secrets/vault-token
# VAULT_MOUNT_PATH=secret

# AWS Secrets Manager
# AWS_REGION=us-west-2
# AWS_SECRET_PREFIX=ats-core

# Azure Key Vault
# AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/
# AZURE_TENANT_ID=your-tenant-id

# Google Secret Manager
# GOOGLE_CLOUD_PROJECT=your-project-id
# GCP_SECRET_PREFIX=ats-core