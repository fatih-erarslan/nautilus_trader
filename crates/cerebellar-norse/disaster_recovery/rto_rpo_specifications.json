  "recovery_scenarios": {
    "single_component_failure": {
      "description": "Failure of individual component while others remain operational",
      "probability": "high",
      "impact": "low_to_medium",
      "recovery_strategy": "automatic_failover",
      "expected_rto": "1-5 minutes",
      "expected_rpo": "0-1 minutes"
    },
    "datacenter_outage": {
      "description": "Complete outage of primary datacenter",
      "probability": "medium",
      "impact": "high",
      "recovery_strategy": "datacenter_failover",
      "expected_rto": "15-30 minutes",
      "expected_rpo": "1-5 minutes"
    },
    "network_partition": {
      "description": "Network connectivity issues between components",
      "probability": "medium",
      "impact": "medium",
      "recovery_strategy": "component_isolation_and_fallback",
      "expected_rto": "5-15 minutes",
      "expected_rpo": "1-3 minutes"
    },
    "data_corruption": {
      "description": "Corruption of critical data stores",
      "probability": "low",
      "impact": "high",
      "recovery_strategy": "point_in_time_recovery",
      "expected_rto": "30-60 minutes",
      "expected_rpo": "5-30 minutes"
    },
    "cyber_attack": {
      "description": "Malicious attack affecting system integrity",
      "probability": "low",
      "impact": "critical",
      "recovery_strategy": "complete_system_restoration",
      "expected_rto": "2-8 hours",
      "expected_rpo": "1-60 minutes"
    },
    "natural_disaster": {
      "description": "Natural disaster affecting primary and backup facilities",
      "probability": "very_low",
      "impact": "critical",
      "recovery_strategy": "remote_site_activation",
      "expected_rto": "4-24 hours",
      "expected_rpo": "5-120 minutes"
    }
