#!/bin/bash
# Real-Time Trading Demo Command for Claude Code
# Safe demonstration of the trading system without real trades

set -e

# Get script directory  
SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )"
PYTHON_SCRIPT="$SCRIPT_DIR/scripts/demo_real_time_trading.py"

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Logging function
log_info() {
    echo -e "${BLUE}[INFO]${NC} $1"
}

log_success() {
    echo -e "${GREEN}[SUCCESS]${NC} $1"
}

log_warning() {
    echo -e "${YELLOW}[WARNING]${NC} $1"
}

log_error() {
    echo -e "${RED}[ERROR]${NC} $1"
}

# Check if Python script exists
if [ ! -f "$PYTHON_SCRIPT" ]; then
    log_error "Demo script not found: $PYTHON_SCRIPT"
    exit 1
fi

# Check if required environment variables are set
check_env() {
    if [ -z "$ALPACA_API_KEY" ] || [ -z "$ALPACA_API_SECRET" ]; then
        log_warning "Alpaca credentials not found in environment"
        log_info "Checking .env file..."
        if [ -f "$SCRIPT_DIR/.env" ]; then
            log_info "Loading credentials from .env file"
        else
            log_error "No .env file found. Please set ALPACA_API_KEY and ALPACA_API_SECRET"
            exit 1
        fi
    fi
}

# Run demo
run_demo() {
    local duration=${1:-3}
    
    log_info "ðŸŽ® Real-Time Trading System Demo"
    log_info "â±ï¸  Duration: $duration minutes"
    log_info "ðŸ”’ Safe Mode: No actual trades will be executed"
    log_info "ðŸ“ˆ Live Data: Real market data via WebSocket"
    echo
    
    check_env
    
    # Run demo in foreground so user can see output
    log_info "Starting demo..."
    python "$PYTHON_SCRIPT" --duration "$duration"
    
    local exit_code=$?
    echo
    if [ $exit_code -eq 0 ]; then
        log_success "Demo completed successfully!"
        log_info "Ready to run the real system? Use: ./start-real-time-trading start"
    else
        log_error "Demo encountered an error"
        exit $exit_code
    fi
}

# Run demo as background process (for testing)
run_demo_background() {
    local duration=${1:-3}
    
    log_info "Starting demo in background for $duration minutes..."
    check_env
    
    # Check if we're in Claude Code environment
    if [ -n "$CLAUDE_CODE_SESSION" ] || [ -n "$ANTHROPIC_CLI" ]; then
        log_info "Detected Claude Code environment - using native background process..."
        log_info "Command will be executed as: python \"$PYTHON_SCRIPT\" --duration $duration"
        log_info "Use BashOutput tool to monitor progress"
        
        # Execute via Claude Code's background system
        exec python "$PYTHON_SCRIPT" --duration "$duration"
    else
        # Run in background
        nohup python "$PYTHON_SCRIPT" --duration "$duration" > demo_output.log 2>&1 &
        local pid=$!
        
        log_success "Demo started in background with PID: $pid"
        log_info "Log file: demo_output.log"
        log_info "Demo will run for $duration minutes"
        
        # Wait for completion
        wait $pid
        local exit_code=$?
        
        echo
        log_info "Demo completed. Showing results:"
        echo
        tail -n 20 demo_output.log
        
        if [ $exit_code -eq 0 ]; then
            log_success "Background demo completed successfully!"
        else
            log_error "Background demo encountered an error"
            exit $exit_code
        fi
    fi
}

# Show help
show_help() {
    echo "Real-Time Trading System Demo"
    echo
    echo "Usage: $0 [DURATION] [OPTIONS]"
    echo
    echo "Arguments:"
    echo "  DURATION    Demo duration in minutes (default: 3)"
    echo
    echo "Options:"  
    echo "  --background   Run demo in background"
    echo "  -h, --help     Show this help message"
    echo
    echo "Examples:"
    echo "  $0            # Run 3-minute demo"
    echo "  $0 5          # Run 5-minute demo"
    echo "  $0 2 --background  # Run 2-minute demo in background"
    echo
    echo "Demo Features:"
    echo "  âœ… Real market data via WebSocket"
    echo "  âœ… Live news sentiment analysis"
    echo "  âœ… Trading signal generation"  
    echo "  âœ… Risk management calculations"
    echo "  ðŸ”’ No actual trades executed (safe mode)"
    echo
    echo "Environment:"
    echo "  ALPACA_API_KEY     - Required: Your Alpaca API key"
    echo "  ALPACA_API_SECRET  - Required: Your Alpaca API secret"
    echo
}

# Main command processing
case "${1:-3}" in
    "-h"|"--help"|"help")
        show_help
        ;;
    "--background")
        run_demo_background "${2:-3}"
        ;;
    *)
        # Check if first arg is --background
        if [ "$2" = "--background" ]; then
            run_demo_background "$1"
        else
            # Treat as duration
            if [[ "$1" =~ ^[0-9]+$ ]]; then
                run_demo "$1"  
            else
                log_error "Invalid duration: $1"
                log_info "Duration must be a number (minutes)"
                exit 1
            fi
        fi
        ;;
esac