{
  "strategy": {
    "name": "neural_momentum_strategy",
    "version": "1.0.0",
    "parameters": {
      "momentum_threshold": 0.6,
      "rsi_overbought": 70,
      "rsi_oversold": 30,
      "macd_threshold": 0.0,
      "volume_threshold": 1.5,
      "neural_confidence_min": 0.7,
      "sentiment_threshold": 0.5,
      "max_position_size": 0.05,
      "stop_loss_pct": 0.02,
      "target_multiplier": 3.0,
      "pyramid_levels": 3,
      "correlation_limit": 0.7
    },
    "neural_config": {
      "input_dim": 50,
      "hidden_dims": [128, 64, 32],
      "learning_rate": 0.001,
      "batch_size": 64,
      "epochs": 100,
      "dropout_rate": 0.2,
      "attention_heads": 4,
      "validation_split": 0.2
    },
    "feature_config": {
      "technical_features": 20,
      "sentiment_features": 10,
      "microstructure_features": 10,
      "cross_asset_features": 10,
      "lookback_periods": [5, 10, 20, 50],
      "normalization": "z_score"
    }
  },
  "risk_management": {
    "max_portfolio_risk": 0.02,
    "max_position_size": 0.05,
    "max_sector_exposure": 0.3,
    "max_correlation": 0.7,
    "volatility_lookback": 20,
    "confidence_level": 0.95,
    "mc_simulations": 10000,
    "time_horizon": 1,
    "drawdown_limit": 0.15,
    "var_limit": 0.025,
    "concentration_limit": 0.1,
    "regime_adjustments": {
      "high_volatility": {
        "position_size_multiplier": 0.7,
        "stop_loss_multiplier": 1.5,
        "confidence_threshold": 0.8
      },
      "low_volatility": {
        "position_size_multiplier": 1.3,
        "stop_loss_multiplier": 0.8,
        "confidence_threshold": 0.6
      },
      "high_correlation": {
        "position_size_multiplier": 0.6,
        "correlation_limit": 0.5
      }
    }
  },
  "monitoring": {
    "risk_free_rate": 0.02,
    "benchmark_symbol": "SPY",
    "performance_frequency": 3600,
    "risk_check_frequency": 300,
    "alert_thresholds": {
      "max_drawdown_alert": 0.1,
      "max_consecutive_losses": 5,
      "daily_loss_limit": 0.05,
      "var_breach_threshold": 0.02,
      "position_concentration": 0.08
    },
    "metrics_to_track": [
      "total_return",
      "sharpe_ratio",
      "sortino_ratio",
      "max_drawdown",
      "calmar_ratio",
      "win_rate",
      "profit_factor",
      "var_95",
      "expected_shortfall"
    ]
  },
  "trading": {
    "symbols": [
      "SPY", "QQQ", "IWM", "EFA", "EEM",
      "AAPL", "MSFT", "GOOGL", "AMZN", "TSLA",
      "NVDA", "META", "BRK.B", "JNJ", "V",
      "UNH", "HD", "PG", "MA", "DIS"
    ],
    "max_positions": 10,
    "rebalance_frequency": "daily",
    "trading_schedule": {
      "market_open": "09:30",
      "market_close": "16:00",
      "signal_generation_frequency": 300,
      "position_management_frequency": 60,
      "risk_monitoring_frequency": 300
    },
    "execution": {
      "order_type": "market",
      "time_in_force": "day",
      "max_order_value": 10000,
      "min_order_value": 100,
      "transaction_costs": 0.001,
      "slippage": 0.0005
    }
  },
  "data_sources": {
    "price_data": {
      "primary": "alpha_vantage",
      "backup": "yahoo_finance",
      "update_frequency": 60
    },
    "news_data": {
      "enabled": true,
      "sources": ["reuters", "bloomberg", "cnbc"],
      "sentiment_model": "enhanced",
      "lookback_hours": 24,
      "update_frequency": 300
    },
    "fundamental_data": {
      "enabled": false,
      "provider": "quandl",
      "update_frequency": 86400
    }
  },
  "backtesting": {
    "initial_capital": 100000,
    "transaction_costs": 0.001,
    "slippage": 0.0005,
    "benchmark_symbol": "SPY",
    "walk_forward_periods": 12,
    "optimization_metric": "sharpe_ratio",
    "regime_analysis": true,
    "monte_carlo_runs": 1000,
    "out_of_sample_ratio": 0.2
  },
  "neural_training": {
    "enabled": true,
    "training_frequency": 86400,
    "min_samples": 100,
    "max_samples": 10000,
    "validation_frequency": 7200,
    "model_save_frequency": 86400,
    "early_stopping": {
      "enabled": true,
      "patience": 10,
      "min_delta": 0.001
    },
    "data_augmentation": {
      "noise_factor": 0.01,
      "time_shift": true,
      "feature_dropout": 0.1
    }
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "handlers": [
      {
        "type": "file",
        "filename": "logs/neural_momentum_strategy.log",
        "max_bytes": 10485760,
        "backup_count": 5
      },
      {
        "type": "stream",
        "stream": "stdout"
      }
    ]
  },
  "alerts": {
    "email": {
      "enabled": false,
      "smtp_server": "smtp.gmail.com",
      "port": 587,
      "recipients": []
    },
    "webhook": {
      "enabled": false,
      "url": "",
      "timeout": 10
    },
    "slack": {
      "enabled": false,
      "webhook_url": "",
      "channel": "#trading-alerts"
    }
  },
  "system": {
    "max_workers": 4,
    "memory_limit": "2GB",
    "cache_size": 1000,
    "gc_frequency": 3600,
    "health_check_frequency": 300
  }
}