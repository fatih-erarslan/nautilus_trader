# Codex + Flow-Nexus Aliases
# Add these to your shell profile or use directly in Codex

# Quick commands
alias fx='npx flow-nexus@latest'
alias fx-swarm='npx flow-nexus@latest swarm init'
alias fx-agent='npx flow-nexus@latest agent spawn'
alias fx-task='npx flow-nexus@latest task orchestrate'
alias fx-chat='npx flow-nexus@latest seraphina chat'

# Integration with Codex
alias codex-fx='/workspaces/ai-news-trader/scripts/codex-flow-nexus.sh'

# Combined workflows
fx-dev() {
    echo "ğŸš€ Starting Flow-Nexus Development Environment..."
    npx flow-nexus@latest swarm init --topology mesh
    npx flow-nexus@latest agent spawn --type coder
    npx flow-nexus@latest agent spawn --type tester
