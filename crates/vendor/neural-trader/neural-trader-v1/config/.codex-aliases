}

fx-analyze() {
    echo "ğŸ” Analyzing with Flow-Nexus..."
    npx flow-nexus@latest github repo analyze --repo "$1"
}

fx-sandbox() {
    echo "ğŸ“¦ Creating Flow-Nexus Sandbox..."
    npx flow-nexus@latest sandbox create --template "${1:-node}"
}