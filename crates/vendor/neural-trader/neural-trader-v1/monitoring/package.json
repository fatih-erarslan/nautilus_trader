{
  "name": "@neural-trader/monitoring",
  "version": "1.0.0",
  "description": "Monitoring and validation infrastructure for Neural Trader swarm deployment",
  "main": "index.ts",
  "scripts": {
    "dashboard": "ts-node dashboard/real-time-monitor.ts",
    "health-check": "ts-node health/health-check-system.ts",
    "validate": "ts-node validation/deployment-validator.ts",
    "report": "ts-node reports/performance-reporter.ts",
    "test": "jest",
    "monitor-all": "concurrently \"npm run dashboard\" \"npm run health-check\"",
    "build": "tsc",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "blessed": "^0.1.81",
    "blessed-contrib": "^4.11.0",
    "events": "^3.3.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/blessed": "^0.1.25",
    "@types/node": "^20.0.0",
    "concurrently": "^8.2.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "monitoring",
    "health-check",
    "validation",
    "performance",
    "neural-trader",
    "e2b",
    "swarm"
  ]
}
