{
  "name": "@neural-trader/rust-core",
  "version": "0.1.0",
  "description": "High-performance Rust core for Neural Trader algorithmic trading system",
  "main": "index.js",
  "types": "index.d.ts",
  "keywords": [
    "trading",
    "neural",
    "algorithmic",
    "rust",
    "napi",
    "finance",
    "backtesting",
    "technical-analysis"
  ],
  "author": "Neural Trader Team",
  "license": "MIT OR Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/ruvnet/neural-trader.git",
    "directory": "neural-trader-rust/crates/napi-bindings"
  },
  "napi": {
    "binaryName": "neural-trader",
    "targets": [
      "x86_64-pc-windows-msvc",
      "x86_64-apple-darwin",
      "aarch64-apple-darwin",
      "x86_64-unknown-linux-gnu",
      "aarch64-unknown-linux-gnu"
    ],
    "package": {
      "name": "@neural-trader/rust"
    }
  },
  "scripts": {
    "build": "napi build --platform --release",
    "build:debug": "napi build --platform",
    "build:release": "napi build --platform --release --strip",
    "build:all": "napi build --platform --release --strip --target x86_64-pc-windows-msvc --target x86_64-apple-darwin --target aarch64-apple-darwin --target x86_64-unknown-linux-gnu --target aarch64-unknown-linux-gnu",
    "build:watch": "napi build --platform --watch",
    "artifacts": "napi artifacts",
    "prepublishOnly": "napi prepublish -t npm && npm run artifacts",
    "universal": "napi universal",
    "version": "napi version",
    "test": "cargo test --manifest-path=../../Cargo.toml --package nt-napi-bindings",
    "test:node": "node test/integration.test.js"
  },
  "devDependencies": {
    "@napi-rs/cli": "^3.4.1"
  },
  "engines": {
    "node": ">= 16"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "optionalDependencies": {
    "@neural-trader/rust-core-win32-x64-msvc": "0.1.0",
    "@neural-trader/rust-core-darwin-x64": "0.1.0",
    "@neural-trader/rust-core-darwin-arm64": "0.1.0",
    "@neural-trader/rust-core-linux-x64-gnu": "0.1.0",
    "@neural-trader/rust-core-linux-arm64-gnu": "0.1.0"
  }
}