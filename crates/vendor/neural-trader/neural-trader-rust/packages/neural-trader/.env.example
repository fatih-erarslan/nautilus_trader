# Neural Trader Environment Configuration
# Copy this file to .env and fill in your API keys

# ============================================
# BROKER APIS (Live Trading)
# ============================================

# Alpaca API (Stock/Crypto Trading)
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets  # paper or live
ALPACA_DATA_URL=https://data.alpaca.markets

# Interactive Brokers
IB_HOST=127.0.0.1
IB_PORT=7497
IB_CLIENT_ID=1

# Binance (Crypto)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here

# Coinbase (Crypto)
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_API_SECRET=your_coinbase_api_secret_here
COINBASE_PASSPHRASE=your_coinbase_passphrase_here

# ============================================
# MARKET DATA PROVIDERS
# ============================================

# Polygon.io (Real-time market data)
POLYGON_API_KEY=your_polygon_api_key_here

# Alpha Vantage (Market data)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# News APIs
NEWS_API_KEY=your_newsapi_key_here
FINNHUB_API_KEY=your_finnhub_api_key_here

# ============================================
# E2B SANDBOXES (Cloud Execution)
# ============================================

E2B_API_KEY=your_e2b_api_key_here
E2B_TEMPLATE=base  # base, nodejs, python, claude-code
E2B_TIMEOUT=3600   # seconds

# ============================================
# ANTHROPIC (Claude AI)
# ============================================

ANTHROPIC_API_KEY=your_anthropic_api_key_here
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# ============================================
# SPORTS BETTING & ODDS
# ============================================

# The Odds API (Sports betting odds)
ODDS_API_KEY=your_odds_api_key_here

# Prediction Markets
POLYMARKET_API_KEY=your_polymarket_api_key_here
PREDICTIT_API_KEY=your_predictit_api_key_here

# ============================================
# RISK & COMPLIANCE
# ============================================

# Maximum position size as % of portfolio
MAX_POSITION_SIZE=0.10  # 10%

# Maximum drawdown before auto-stop
MAX_DRAWDOWN=0.20  # 20%

# Daily loss limit
DAILY_LOSS_LIMIT=1000  # USD

# VaR confidence level
VAR_CONFIDENCE=0.95  # 95%

# ============================================
# NEURAL NETWORK CONFIGURATION
# ============================================

# Model training settings
NEURAL_EPOCHS=100
NEURAL_BATCH_SIZE=32
NEURAL_LEARNING_RATE=0.001

# GPU acceleration (if available)
USE_GPU=false
WASM_SIMD=true  # WebAssembly SIMD acceleration

# ============================================
# LOGGING & MONITORING
# ============================================

LOG_LEVEL=info  # error, warn, info, debug, trace
LOG_FILE=neural-trader.log
METRICS_ENABLED=true
PERFORMANCE_TRACKING=true

# ============================================
# SWARM COORDINATION
# ============================================

# Swarm topology (hierarchical, mesh, ring, star)
SWARM_TOPOLOGY=mesh
SWARM_MAX_AGENTS=10
SWARM_AUTO_SCALE=true

# Byzantine fault tolerance
BYZANTINE_THRESHOLD=0.66  # 66% consensus required

# ============================================
# MCP SERVER
# ============================================

MCP_TRANSPORT=stdio  # stdio, http, websocket
MCP_PORT=3000
MCP_HOST=localhost

# ============================================
# DATABASE (Optional)
# ============================================

DATABASE_URL=postgresql://user:password@localhost:5432/neural_trader
REDIS_URL=redis://localhost:6379

# ============================================
# FEATURE FLAGS
# ============================================

ENABLE_SELF_LEARNING=true
ENABLE_PATTERN_DISCOVERY=true
ENABLE_ADAPTIVE_RISK=true
ENABLE_TEMPORAL_ADVANTAGE=true
ENABLE_CONSCIOUSNESS_METRICS=false  # Experimental

# ============================================
# DEVELOPMENT
# ============================================

NODE_ENV=development  # development, production, test
DEBUG=neural-trader:*
