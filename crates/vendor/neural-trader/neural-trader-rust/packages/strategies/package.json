{
  "name": "@neural-trader/strategies",
  "version": "2.1.1",
  "description": "Trading strategies for Neural Trader - momentum, mean reversion, arbitrage, pairs trading",
  "main": "index.js",
  "types": "index.d.ts",
  "files": [
    "index.js",
    "load-binary.js",
    "index.d.ts",
    "*.node",
    "README.md",
    "native"
  ],
  "scripts": {
    "build": "napi build --platform --release --cargo-cwd ../../crates/napi-bindings --cargo-name nt-napi-bindings",
    "build:all": "napi build --platform --release --target x86_64-unknown-linux-gnu --target x86_64-apple-darwin --target aarch64-apple-darwin --target x86_64-pc-windows-msvc --cargo-cwd ../../crates/napi-bindings --cargo-name nt-napi-bindings",
    "clean": "rm -f *.node",
    "test": "jest --testMatch '**/*.test.ts' --passWithNoTests --coverage --collectCoverageFrom='index.js' --collectCoverageFrom='validation.ts'",
    "test:validation": "jest --testMatch '**/*validation*.test.ts'",
    "test:unit": "jest --testMatch '**/*unit*.test.ts'",
    "test:integration": "jest --testMatch '**/*integration*.test.ts'"
  },
  "keywords": [
    "neural-trader",
    "trading",
    "algorithmic-trading",
    "ai",
    "rust",
    "napi",
    "high-performance",
    "typescript",
    "claude-code",
    "mcp",
    "self-learning",
    "momentum",
    "mean-reversion",
    "arbitrage",
    "pairs-trading",
    "trading-strategies"
  ],
  "author": "Neural Trader Team",
  "license": "MIT OR Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/ruvnet/neural-trader.git",
    "directory": "neural-trader-rust/packages/strategies"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "detect-libc": "^2.0.2",
    "zod": "^3.22.0"
  },
  "peerDependencies": {
    "@neural-trader/core": "^1.0.0"
  },
  "devDependencies": {
    "@napi-rs/cli": "^2.18.0"
  },
  "napi": {
    "name": "neural-trader",
    "triples": {
      "defaults": true,
      "additional": [
        "x86_64-unknown-linux-gnu",
        "x86_64-unknown-linux-musl",
        "aarch64-unknown-linux-gnu",
        "x86_64-apple-darwin",
        "aarch64-apple-darwin",
        "x86_64-pc-windows-msvc"
      ]
    }
  },
  "optionalDependencies": {
    "@neural-trader/strategies-linux-x64-gnu": "1.0.0",
    "@neural-trader/strategies-linux-x64-musl": "1.0.0",
    "@neural-trader/strategies-linux-arm64-gnu": "1.0.0",
    "@neural-trader/strategies-darwin-x64": "1.0.0",
    "@neural-trader/strategies-darwin-arm64": "1.0.0",
    "@neural-trader/strategies-win32-x64-msvc": "1.0.0"
  },
  "homepage": "https://neural-trader.ruv.io"
}
