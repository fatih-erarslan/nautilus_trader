{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "/tools/ping.json",
  "title": "ping",
  "description": "Simple ping tool to verify server connectivity.",
  "category": "system",
  "type": "object",
  "properties": {
    "input_schema": {
      "type": "object",
      "properties": {},
      "required": []
    },
    "output_schema": {
      "type": "object",
      "properties": {
        "status": {
          "type": "string",
          "enum": [
            "ok"
          ]
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "server_version": {
          "type": "string"
        }
      },
      "required": [
        "status",
        "timestamp"
      ]
    }
  },
  "metadata": {
    "cost": "low",
    "latency": "fast",
    "gpu_capable": false,
    "version": "2.0.0"
  }
}
