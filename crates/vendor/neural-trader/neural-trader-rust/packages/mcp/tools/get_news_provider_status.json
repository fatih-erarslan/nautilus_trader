{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "/tools/get_news_provider_status.json",
  "title": "get_news_provider_status",
  "description": "Get current status of all news providers.",
  "category": "news",
  "type": "object",
  "properties": {
    "input_schema": {
      "type": "object",
      "properties": {}
    },
    "output_schema": {
      "type": "object",
      "properties": {
        "providers": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "status": {
                "type": "string",
                "enum": [
                  "active",
                  "inactive",
                  "error"
                ]
              },
              "articles_today": {
                "type": "integer"
              },
              "last_update": {
                "type": "string",
                "format": "date-time"
              }
            }
          }
        }
      }
    }
  },
  "metadata": {
    "cost": "low",
    "latency": "fast",
    "gpu_capable": false,
    "version": "2.0.0"
  }
}
