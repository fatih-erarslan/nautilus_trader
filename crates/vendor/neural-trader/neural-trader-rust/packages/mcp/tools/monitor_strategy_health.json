{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "/tools/monitor_strategy_health.json",
  "title": "monitor_strategy_health",
  "description": "Monitor strategy health and performance.",
  "category": "monitoring",
  "type": "object",
  "properties": {
    "input_schema": {
      "type": "object",
      "properties": {
        "strategy": {
          "type": "string"
        }
      },
      "required": [
        "strategy"
      ]
    },
    "output_schema": {
      "type": "object",
      "properties": {
        "strategy": {
          "type": "string"
        },
        "health_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "status": {
          "type": "string",
          "enum": [
            "healthy",
            "degraded",
            "critical"
          ]
        },
        "issues": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "recommendations": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "metadata": {
    "cost": "low",
    "latency": "fast",
    "gpu_capable": false,
    "version": "2.0.0"
  }
}
