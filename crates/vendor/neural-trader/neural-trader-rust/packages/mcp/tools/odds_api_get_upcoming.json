{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "/tools/odds_api_get_upcoming.json",
  "title": "odds_api_get_upcoming",
  "description": "Get upcoming events with odds.",
  "category": "odds_api",
  "type": "object",
  "properties": {
    "input_schema": {
      "type": "object",
      "properties": {
        "sport": {
          "type": "string"
        },
        "days_ahead": {
          "type": "integer",
          "default": 7
        },
        "regions": {
          "type": "string",
          "default": "us"
        },
        "markets": {
          "type": "string",
          "default": "h2h"
        }
      },
      "required": [
        "sport"
      ]
    },
    "output_schema": {
      "type": "object",
      "properties": {
        "events": {
          "type": "array"
        }
      }
    }
  },
  "metadata": {
    "cost": "medium",
    "latency": "fast",
    "gpu_capable": false,
    "version": "2.0.0"
  }
}
