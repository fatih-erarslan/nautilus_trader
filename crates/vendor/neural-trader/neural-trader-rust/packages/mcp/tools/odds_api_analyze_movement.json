{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "/tools/odds_api_analyze_movement.json",
  "title": "odds_api_analyze_movement",
  "description": "Analyze odds movement over time.",
  "category": "odds_api",
  "type": "object",
  "properties": {
    "input_schema": {
      "type": "object",
      "properties": {
        "sport": {
          "type": "string"
        },
        "event_id": {
          "type": "string"
        },
        "intervals": {
          "type": "integer",
          "default": 5
        }
      },
      "required": [
        "sport",
        "event_id"
      ]
    },
    "output_schema": {
      "type": "object",
      "properties": {
        "movement": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "timestamp": {
                "type": "string"
              },
              "odds": {
                "type": "object"
              },
              "change": {
                "type": "number"
              }
            }
          }
        }
      }
    }
  },
  "metadata": {
    "cost": "medium",
    "latency": "medium",
    "gpu_capable": false,
    "version": "2.0.0"
  }
}
