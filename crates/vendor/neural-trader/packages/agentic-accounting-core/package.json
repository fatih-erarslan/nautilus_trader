{
  "name": "@neural-trader/agentic-accounting-core",
  "version": "0.1.0",
  "description": "Core TypeScript library for autonomous accounting with multi-agent coordination",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -b",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "db:migrate": "ts-node src/database/migrate.ts up",
    "db:seed": "ts-node src/database/migrate.ts seed",
    "db:rollback": "ts-node src/database/migrate.ts rollback",
    "db:reset": "ts-node src/database/migrate.ts reset",
    "db:setup": "npm run db:migrate && npm run db:seed",
    "bench:vector": "ts-node benchmarks/vector-search.bench.ts",
    "bench:database": "ts-node benchmarks/database.bench.ts",
    "bench:e2e": "ts-node benchmarks/e2e-workflows.bench.ts",
    "bench:all": "npm run bench:vector && npm run bench:database && npm run bench:e2e"
  },
  "keywords": [
    "accounting",
    "tax",
    "agents",
    "neural-trader",
    "compliance",
    "forensics"
  ],
  "author": "Neural Trader Team",
  "license": "MIT OR Apache-2.0",
  "dependencies": {
    "@neural-trader/agentic-accounting-types": "workspace:*",
    "@neural-trader/agentic-accounting-rust-core": "workspace:*",
    "agentdb": "^1.6.1",
    "decimal.js": "^10.4.3",
    "pg": "^8.11.3",
    "@types/pg": "^8.10.9",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.19.25",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "ts-jest": "^29.1.1",
    "eslint": "^8.56.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0"
  }
}
