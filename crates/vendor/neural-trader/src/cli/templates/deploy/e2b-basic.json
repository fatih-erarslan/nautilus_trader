{
  "name": "e2b-basic",
  "description": "Basic E2B sandbox deployment template",
  "version": "1.0.0",
  "platform": "e2b",
  "config": {
    "platform": "e2b",
    "template": "neural-trader-base",
    "scale": 1,
    "region": "us-east",
    "resources": {
      "cpu": 2,
      "memory": 4,
      "timeout": 3600
    },
    "autoRestart": false,
    "envVars": {
      "NODE_ENV": "production",
      "LOG_LEVEL": "info"
    }
  },
  "notes": [
    "Basic template for single instance deployment",
    "Suitable for testing and development",
    "Customize resources and environment variables as needed"
  ]
}
