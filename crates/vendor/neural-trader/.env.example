# Neural Trader Environment Configuration
# Copy this file to .env and fill in your actual values

# ==========================================
# CRITICAL SECURITY SETTINGS
# ==========================================

# JWT Secret (REQUIRED - Application will not start without this)
# Generate with: openssl rand -base64 64
# Minimum 32 characters, preferably 64+
JWT_SECRET=YOUR_SECURE_JWT_SECRET_HERE_MINIMUM_32_CHARACTERS

# Database encryption key (REQUIRED for production)
# Generate with: openssl rand -base64 32
DB_ENCRYPTION_KEY=YOUR_DATABASE_ENCRYPTION_KEY_HERE

# API Keys for external services
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
THE_ODDS_API_KEY=your_odds_api_key_here

# ==========================================
# REDIS CONFIGURATION (Required for caching & rate limiting)
# ==========================================
REDIS_URL=redis://localhost:6379

# ==========================================
# E2B CLOUD CONFIGURATION (Required for cloud deployment)
# ==========================================
E2B_API_KEY=your_e2b_api_key_here
E2B_ACCESS_TOKEN=your_e2b_access_token_here

# ==========================================
# APPLICATION SETTINGS
# ==========================================
NODE_ENV=development
PORT=3000

# CORS allowed origins (comma-separated)
CORS_ORIGIN=http://localhost:3000,http://localhost:8080

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# ==========================================
# SECURITY NOTES
# ==========================================
# 1. NEVER commit .env file to version control
# 2. Use strong, randomly generated secrets
# 3. Rotate secrets monthly in production
# 4. Use secret management services (AWS Secrets Manager, HashiCorp Vault) in production
# 5. Set restrictive file permissions: chmod 600 .env
