# AI News Trader Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file with real credentials to version control

# ====================
# Polymarket API Configuration
# ====================

# Required for real Polymarket API access
POLYMARKET_API_KEY=your-polymarket-api-key-here
POLYMARKET_PRIVATE_KEY=your-polymarket-private-key-here

# Optional Polymarket settings
POLYMARKET_ENVIRONMENT=production  # Options: production, staging, development
POLYMARKET_CLOB_URL=https://clob.polymarket.com
POLYMARKET_GAMMA_URL=https://gamma-api.polymarket.com
POLYMARKET_WS_URL=wss://ws.polymarket.com
POLYMARKET_RATE_LIMIT=100  # Requests per minute
POLYMARKET_TIMEOUT=30  # Request timeout in seconds
POLYMARKET_MAX_RETRIES=3
POLYMARKET_DEBUG=false
POLYMARKET_LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# ====================
# News API Configuration
# ====================

# Alpha Vantage API (for financial news)
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key

# NewsAPI.org (for general news)
NEWS_API_KEY=your-newsapi-org-key

# Finnhub API (for financial data and news)
FINNHUB_API_KEY=your-finnhub-api-key

# ====================
# Trading Platform APIs
# ====================

# Interactive Brokers (if using real trading)
IB_GATEWAY_HOST=127.0.0.1
IB_GATEWAY_PORT=7497
IB_CLIENT_ID=1

# Alpaca Trading (paper or live trading)
ALPACA_API_KEY=your-alpaca-api-key
ALPACA_SECRET_KEY=your-alpaca-secret-key
ALPACA_BASE_URL=https://paper-api.alpaca.markets  # Use https://api.alpaca.markets for live

# ====================
# Database Configuration
# ====================

# PostgreSQL settings (if using database)
DATABASE_URL=postgresql://user:password@localhost:5432/ainewstrader
DB_POOL_SIZE=10
DB_POOL_TIMEOUT=30

# Redis (for caching and rate limiting)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your-redis-password  # Leave empty if no password

# ====================
# AI/ML Configuration
# ====================

# OpenAI API (if using GPT models)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4  # Options: gpt-4, gpt-3.5-turbo

# Anthropic Claude (if using Claude models)
ANTHROPIC_API_KEY=your-anthropic-api-key

# Hugging Face (for custom models)
HUGGINGFACE_API_KEY=your-huggingface-api-key

# ====================
# GPU Configuration
# ====================

# CUDA settings
CUDA_VISIBLE_DEVICES=0  # GPU device ID(s) to use
PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:512

# ====================
# Application Settings
# ====================

# General settings
APP_ENV=development  # Options: development, staging, production
APP_DEBUG=true
APP_LOG_LEVEL=INFO
APP_SECRET_KEY=generate-a-long-random-string-here

# Trading settings
TRADING_MODE=paper  # Options: paper, live
MAX_POSITION_SIZE=10000  # Maximum position size in USD
RISK_LIMIT=0.02  # Maximum risk per trade (2%)
ENABLE_SHORT_SELLING=false

# MCP Server settings
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=8080
MCP_ENABLE_SSL=false

# ====================
# Monitoring & Analytics
# ====================

# Sentry (for error tracking)
SENTRY_DSN=your-sentry-dsn-here

# Prometheus metrics
ENABLE_METRICS=true
METRICS_PORT=9090

# Grafana
GRAFANA_API_KEY=your-grafana-api-key

# ====================
# Security Settings
# ====================

# API Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# CORS settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Session settings
SESSION_LIFETIME_MINUTES=1440  # 24 hours
SESSION_SECRET=generate-another-random-string-here

# ====================
# Feature Flags
# ====================

# Enable/disable features
ENABLE_NEURAL_FORECASTING=true
ENABLE_GPU_ACCELERATION=true
ENABLE_REALTIME_STREAMING=true
ENABLE_BACKTESTING=true
ENABLE_PAPER_TRADING=true
ENABLE_LIVE_TRADING=false  # Be very careful with this!
ENABLE_POLYMARKET_INTEGRATION=true
ENABLE_NEWS_SENTIMENT=true
ENABLE_TECHNICAL_ANALYSIS=true

# ====================
# Development Settings
# ====================

# Only for development
DEV_AUTO_RELOAD=true
DEV_MOCK_TRADES=true
DEV_SKIP_AUTH=false
DEV_VERBOSE_LOGGING=false

# ====================
# Notes
# ====================
# 1. Copy this file to .env before use
# 2. NEVER commit .env with real credentials
# 3. Generate secure random strings for secret keys
# 4. Use strong, unique API keys for each service
# 5. Regularly rotate API keys and secrets
# 6. Use environment-specific values (dev/staging/prod)
# 7. Enable only features you need and have configured
# 8. Monitor API usage to avoid rate limits and costs