[package]
name = "nn_models"
version = "0.1.0"
edition = "2021"

[dependencies]
# Core dependencies
rand = "0.8"
rand_chacha = "0.3"
rand_xorshift = "0.3"
rayon = "1.10"
serde = { version = "1.0", features = ["derive"] }

# Performance
portable-simd = { git = "https://github.com/rust-lang/portable-simd" }

[dev-dependencies]
criterion = "0.5"

[features]
default = ["parallel"]
parallel = []
simd = []

[[bench]]
name = "isolation_forest"
harness = false