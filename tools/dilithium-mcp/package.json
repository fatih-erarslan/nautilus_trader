{
  "name": "@tengri/dilithium-mcp",
  "version": "3.0.0",
  "description": "Post-Quantum Secure MCP Server with Dilithium Cryptography, Rust-Bun.js Architecture",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "dilithium-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun",
    "build:native": "cd native && cargo build --release && cp target/release/libdilithium_native.dylib ../dist/",
    "build:all": "npm run build:native && npm run build",
    "start": "bun run dist/index.js",
    "dev": "bun run --watch src/index.ts",
    "test": "bun test",
    "test:security": "bun test src/auth/*.test.ts",
    "clean": "rm -rf dist native/target",
    "lint": "bunx @biomejs/biome check src/",
    "keygen": "bun run src/auth/keygen.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.3.0",
    "@biomejs/biome": "^1.7.0"
  },
  "engines": {
    "bun": ">=1.1.0"
  },
  "trustedDependencies": [
    "@tengri/dilithium-native"
  ],
  "keywords": [
    "mcp",
    "dilithium",
    "post-quantum",
    "cryptography",
    "security",
    "rust",
    "bun",
    "pbit",
    "hyperbolic"
  ],
  "author": "Tengri Technologies <dev@tengritek.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tengritek/hyperphysics"
  }
}
